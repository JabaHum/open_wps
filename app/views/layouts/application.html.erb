<!DOCTYPE html>
<html>
<head>
  <title>Open WPS</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style type="text/css" media="screen">
    #header {
      background-image: url("<%= compute_public_path('/images/wifi64.png', '') %>");
      background-repeat: no-repeat;
      background-position: top left;
      height: 80px;
    }
  </style>
</head>
<body>

  <div id="page">
    <div id="sidebar">
    </div>
    <div id="content">
      <div id="header">
        <h1>Open WPS</h1>
        <h2>An open source WiFi Positioning System (WPS)</h2> 
      </div>
      <%= link_to :map, maps_path %>|
      <%= link_to :wifi_access_point, wifi_access_points_path %>
      <div class="clear"><hr/></div>

      <div id="main">
        <%= yield %>
      </div>
      <div class="clear"><hr/></div>

      <div id="footer">
        <%= link_to "Top Page", root_path %>
      </div>
    </div>
  </div>

</body>
</html>
